@page "/"

@inherits ViewComponentBase<JudgeResultViewModel>


<div class="row">
    <div class="col-2">
        <InputButton Class="btn btn-primary" Command="@DataContext.CreateChartCommand">Refresh</InputButton>
    </div>
</div>

<h2>2022年8月</h2>

<div class="row my-6">
    <div class="col">
        <h3>OK/NG</h3>
        <ScatterChart id="chart1" ItemsSource="@DataContext.ChartItems" />
        <h3>OK/NG</h3>
        <BarChart id="chart2" ItemsSource="@DataContext.ChartItems2" />
        <h3>欠陥別</h3>
        <LineChart id="chart3" ItemsSource="@DataContext.ChartItems3" />
        <div id="primaryEditorContainer">
            <div style="grid-column:1;">
                <h3>欠陥部位</h3>
                <PieChart id="chart4" ItemsSource="@DataContext.ChartItems4" />
            </div>
            <div style="grid-column:2;">
                <h3>品種別</h3>
                <RadarChart id="chart5" ItemsSource="@DataContext.ChartItems5" />
            </div>
        </div>
    </div>
</div>

<style>
    #primaryEditorContainer {
        display: grid;
        width: 100%;
        height: 100vh;
        max-height: 100vh;
        grid-template-columns: 1fr 1fr;
        margin: 0px;
        padding: 6px 12px;
    }
</style>

